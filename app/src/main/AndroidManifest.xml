<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopkeeper">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ShoKeeperApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Login" />
        <activity android:name=".Activity.ForgetPassword" />
        <activity android:name=".Activity.Register" />
        <activity android:name=".Activity.MainSeller" />
        <activity android:name=".Activity.CatalogMakeSaleMain" />
        <activity android:name=".Activity.ProductPage" />
        <activity android:name=".Activity.shopKart" />
        <activity android:name=".Activity.OthersProductActivity" />
        <activity android:name=".Activity.EditCatalogMainActivity" />
        <activity android:name=".Activity.EditableProductPage" />
        <activity android:name=".Activity.EditCatalogChangeDescription"></activity>
    </application>

</manifest>